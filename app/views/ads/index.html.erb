<h1>Listing ads</h1>

<table border="1">
  <thead>
    <tr>
      <th>Packet</th>
      <th>Device</th>
      <th>Beacon</th>
      <th>Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= ad.packet %></td>
        <td><%= ad.deviceUUID %></td>
        <td><%= ad.uuid%></td>
        <td><%= ad.created_at.strftime("%Y/%m/%d %H:%M")%></td>
        <td><%= link_to 'Show', ad %></td>
        <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
        <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ad', new_ad_path %>
